{% extends 'admin/admin_base.html.twig' %}

{% block title %}All RacesStats!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <div>
            <a href="{{ path('admin_race_create') }}">create</a>
        </div>
        <table class="admin__table">
            <tr>
                <th>name</th>
                <th>country</th>
                <th>date</th>
                <th>winner</th>
            </tr>
            {% for racestat in racestats %}
                <tr>
                    <td>{{ racestat.race.name }}</td>
                    <td>{{ racestat.race.country }}</td>
                    <td>{{ racestat.race.date|date('Y-m-d') }}</td>
                    <td>{{ racestat.pilot.name }} {{ racestat.pilot.surname }}</td>
                    {#                    <td><a href="{{ path('admin_race_update', {'id':race.id}) }}">update</a></td>#}
{#                    <td><a href="{{ path('admin_race_delete', {'id':race.id}) }}">delete</a></td>#}
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}
