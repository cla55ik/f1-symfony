{% extends 'admin/admin_base.html.twig' %}

{% block title %}All Countries!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <div>
            <a href="{{ path('admin_country_create') }}">create</a>
        </div>
        <table class="admin__table">
            <tr>
                <th>image</th>
                <th>name</th>
                <th></th>
                <th></th>
            </tr>
            {% for country in countries %}
                <tr>
                    <td><img src="{{ asset(constant('App\\Entity\\Country::IMG_UPLOAD_DIR') ~ '/' ~ country.img) }}"></td>
                    <td>{{ country.name }}</td>
                    <td><a href="{{ path('admin_country_update', {'id':country.id}) }}">update</a></td>
                    <td><a href="{{ path('admin_country_delete', {'id':country.id}) }}">delete</a></td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}
