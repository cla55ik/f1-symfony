{% extends 'admin/admin_base.html.twig' %}

{% block title %}All Pilots!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <div>
            <a href="{{ path('admin_pilot_create') }}">create</a>
        </div>
        <table class="admin__table">
            <tr>
                <th>image</th>
                <th>name</th>
                <th>surname</th>
                <th>team</th>
                <th>country</th>
                <th></th>
            </tr>
            {% for pilot in pilots %}
                <tr>
                    <td><img src="{{ asset(constant('App\\Entity\\Pilot::IMG_UPLOAD_DIR') ~ '/' ~ pilot.img) }}"></td>
                    <td>{{ pilot.name }}</td>
                    <td>{{ pilot.surname }}</td>
                    <td>{{ pilot.comand }}</td>
                    <td>{{ pilot.country }}</td>
                    <td><a href="{{ path('admin_pilot_update', {'id':pilot.id}) }}">update</a></td>
                    <td><a href="{{ path('admin_pilot_delete', {'id':pilot.id}) }}">delete</a></td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}
