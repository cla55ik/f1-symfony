{% extends 'admin/admin_base.html.twig' %}

{% block title %}All Races!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <div>
            <a href="{{ path('admin_race_create') }}">create</a>
        </div>
        <table class="admin__table">
            <tr>
                <th>name</th>
                <th>date</th>
                <th></th>
            </tr>
            {% for race in races %}
                <tr>
                    <td>{{ race.name }}</td>
                    <td>{{ race.date|date('Y-m-d') }}</td>
                    <td><a href="{{ path('admin_race_update', {'id':race.id}) }}">update</a></td>
                    <td><a href="{{ path('admin_race_delete', {'id':race.id}) }}">delete</a></td>
                    <td><a href="{{ path('admin_racestat_create', {'race_id':race.id}) }}">stat</a></td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}
